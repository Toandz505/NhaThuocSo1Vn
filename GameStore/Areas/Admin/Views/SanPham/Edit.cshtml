                @Html.ValidationMessageFor(model => model.chitietSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.maDM, "maDM", htmlAttributes: new { @class = "control-label col-md-2" })
