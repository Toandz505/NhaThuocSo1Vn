
@model IEnumerable<GameStore.Models.SanPham>
@{
    ViewBag.Title = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        height: 100%;
    }
    .icon-np {
    
        font-size:40px;
        font-weight:bolder;
        color: #ee9595;
    }
</style>
@foreach (var item in Model)
{

    <!-- product -->
    <div class="container2 single-product">
        <div class="row align-items-start">
            <div class="col-5 p-3">
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <ul class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                    </ul>

                    <!-- The slideshow -->
                    <div class="carousel-inner " width="1100" height="500">
                        <div class="carousel-item active">
                            <img class="w-100" src="~/UploadFile/@item.hinhAnh1" alt="slide 1" width="1100" height="500">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" src="~/UploadFile/@item.hinhAnh2" alt="slide 2" width="1100" height="500">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" src="~/UploadFile/@item.hinhAnh3" width="1100" height="500">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#demo" data-slide="prev">
                        <i class='bx bx-left-arrow-alt icon-np'></i>
                    </a>
                    <a class="carousel-control-next " href="#demo" data-slide="next">
                        <i class='bx bx-right-arrow-alt icon-np'></i>
                    </a>
                </div>
            </div>
            <div class="col-7">
                <p style="margin-top:10px"><a href="/games/danhmuc/@item.DanhMuc.maDM">@item.DanhMuc.tenDM</a></p>
                <h3>@item.tenSP</h3>
                <h4>@item.giaTien.000VNĐ</h4>

                <a style="width:200px;" href="@Url.Action("AddToCart", "GioHang", new { maSP = @item.maSP})" role="button" class="btn d-flex align-items-center btn-success" onclick="return alert('Thêm thành công 1 sản phẩm vào giỏ hàng')"> Thêm vào giỏ hàng<i style="font-size:30px" class='bx bx-cart-add'></i></a>
                <h3>Mô tả ngắn<i class="fa fa-indent"></i></h3>
                <br>
                <p style="font-size:15px">
                    @item.chitietSP
                </p>
            </div>
        </div>
    </div>



}

